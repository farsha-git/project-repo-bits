{

  "compilerOptions": {

    "esModuleInterop": true,

    "allowSyntheticDefaultImports": true,

    "target": "ES2020",

    "module": "commonjs",

    "lib": ["ES2020"],

    "outDir": "./dist",

    "rootDir": "./src",

    "strict": true,

    "resolveJsonModule": true,

    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true

  },

  "include": ["src"],

  "exclude": ["node_modules"]

}